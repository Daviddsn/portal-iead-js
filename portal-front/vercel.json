{
    "version": 2,
    "builds": [
      {
        "src": "src/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "src/server.js",
        "methods": ["GET", "POST", "PUT", "DELETE"]
      }
    ],
    "buildCommand": "yarn run deploy",
    "outputDirectory": "public"


  }